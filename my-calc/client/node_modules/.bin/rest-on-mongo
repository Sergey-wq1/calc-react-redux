#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../rest-on-mongo/bin/rest-on-mongo" "$@"
  ret=$?
else 
  node  "$basedir/../rest-on-mongo/bin/rest-on-mongo" "$@"
  ret=$?
fi
exit $ret
